extends layout 
block content
  if view
    div(class="viewContainer")
      div
        h4 Title&nbsp;&nbsp;
        h4= `${data.title}`
      div
        p Description&nbsp;&nbsp;
        p(class="textDescription")= `${data.description}` 
      div
        span Author&nbsp;&nbsp;
        span= `${data.author.name}`

  else
    div(class="booksContainer")
      if data == null
        h1(style="text-align:center;color: #ffffff") No Books
      else
        each item in data
          div
            div(class="card")
              div(class="card-title")
                h2= item.title
              div(class="card-body")
                if item.description.length > 50
                  p= `${item.description.slice(0,50)}...`
                else
                  p= item.description
              div(class="card-footer")
                span= item.author.name

            div(class="viewBtnBelowCard")
              a(href=`/view/${item.id}` ) view
